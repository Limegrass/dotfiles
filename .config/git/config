[alias]
    amend = commit --amend
    b = branch
    bs = bisect
    c = commit
    co = checkout
    d = diff
    dir = rev-parse --git-dir
    df = diff --name-only
    diff-staged = diff --cached
    ds = diff --cached
    dt = difftool
    f = fetch
    m = merge
    mt = mergetool
    pa = add --patch
    patch = add --patch
    rb = rebase
    rbc = rebase --continue
    rc = !git recommit
    recommit = commit --amend --reuse-message=HEAD
    root = rev-parse --show-toplevel
    rs = reset
    s = status
    sp = stash pop
    spp = !git stash && git pull && git stash pop
    st = stash
    u = reset HEAD --
    unstage = reset HEAD --
[core]
    autocrlf = input
    commitGraph = true
    quotepath = false
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[diff "image"]
    command = $XDG_CONFIG_HOME/bin/git-imgdiff
[diff "psd"]
    command = $XDG_CONFIG_HOME/bin/git-psddiff
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[gc]
    writeCommitGraph = true
[merge]
    tool = nvimmerge
[mergetool]
    prompt = false
[mergetool "nvimmerge"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c '$wincmd J'
[pull]
    rebase = true
[rebase]
    autoStash = true
[rerere]
    enabled = true
