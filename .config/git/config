[alias]
    amend = commit --amend
    bb = branch
    branches = branch --list
    cm = commit
    co = checkout
    d = diff
    diff-files = diff --name-only
    diff-staged = diff --cached
    dir = rev-parse --git-dir
    ds = diff --cached
    dt = difftool
    fix = commit --fixup
    fixup = commit --fixup
    m = merge
    mc = merge --no-ff
    mt = mergetool
    patch = add --patch
    rb = rebase
    rb-root = rebase --root
    rbc = rebase --continue
    rc = commit --amend --reuse-message=HEAD
    recommit = commit --amend --reuse-message=HEAD
    rl = reflog
    root = rev-parse --show-toplevel
    rs = reset
    s = status
    sp = stash pop
    skip = update-index --skip-worktree
    skip-rm = update-index --no-skip-worktree
    skip-ls = !git ls-files -v | grep ^S
    squash = rebase -i --autosquash
    st = stash
    sw = switch
    u = reset HEAD --
    unstage = reset HEAD --
[core]
    autocrlf = input
    commitGraph = true
    quotepath = false
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[diff "image"]
    command = $XDG_CONFIG_HOME/bin/git-imgdiff
[diff "psd"]
    command = $XDG_CONFIG_HOME/bin/git-psddiff
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[gc]
    writeCommitGraph = true
[merge]
    tool = nvimmerge
[mergetool]
    prompt = false
    keepBackup = false
[mergetool "nvimmerge"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c '$wincmd J'
[pull]
    rebase = true
[rebase]
    autoStash = true
[rerere]
    enabled = true
