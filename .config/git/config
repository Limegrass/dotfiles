[alias]
    b = branch
    bs = bisect
    c = commit
    co = checkout
    d = diff
    dir = rev-parse --git-dir
    f = fetch
    rc = !git recommit
    recommit = commit --amend --reuse-message=HEAD
    root = rev-parse --show-toplevel
    s = status
    sp = stash pop
    spp = !git stash && git pull && git stash pop
    st = stash
    u = !git unstage
    unstage = reset HEAD --
[core]
    autocrlf = input
    commitGraph = true
    quotepath = false
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[gc]
    writeCommitGraph = true
[pull]
    rebase = true
[rerere]
    enabled = true
[diff "image"]
    command = $HOME/.config/git/git-imgdiff
[diff "psd"]
    command = $HOME/.config/git/git-psddiff
