[alias]
    a = add
    amend = commit --amend
    b = branch
    bs = bisect
    cmt = commit
    chk = checkout
    chp = cherry-pick
    d = diff
    dc = "!dc() { git diff --name-only \"$1^\" \"$1\"; }; dc"
    df = diff --name-only
    dir = rev-parse --git-dir
    diff-staged = diff --cached
    ds = diff --cached
    dt = difftool
    f = fetch
    fix = commit --fixup
    fixup = commit --fixup
    l = log
    m = merge
    mt = mergetool
    pa = add --patch
    patch = add --patch
    rb = rebase
    rbc = rebase --continue
    rc = commit --amend --reuse-message=HEAD
    recommit = commit --amend --reuse-message=HEAD
    rl = reflog
    root = rev-parse --show-toplevel
    rs = reset
    s = status
    sp = stash pop
    squash = rebase -i --autosquash
    st = stash
    sw = switch
    u = reset HEAD --
    unstage = reset HEAD --
[core]
    autocrlf = input
    commitGraph = true
    quotepath = false
[diff]
    tool = nvimdiff
[difftool]
    prompt = false
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[diff "image"]
    command = $XDG_CONFIG_HOME/bin/git-imgdiff
[diff "psd"]
    command = $XDG_CONFIG_HOME/bin/git-psddiff
[filter "lfs"]
    clean = git-lfs clean -- %f
    process = git-lfs filter-process
    required = true
    smudge = git-lfs smudge -- %f
[gc]
    writeCommitGraph = true
[merge]
    tool = nvimmerge
[mergetool]
    prompt = false
[mergetool "nvimmerge"]
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c '$wincmd J'
[pull]
    rebase = true
[rebase]
    autoStash = true
[rerere]
    enabled = true
